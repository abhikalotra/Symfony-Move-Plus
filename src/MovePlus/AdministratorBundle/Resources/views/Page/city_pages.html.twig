{% include '::administartor/header_administartor.html.twig' %}

            <div class="page-container">
               <!-- BEGIN SIDEBAR -->
               <div class="page-sidebar-wrapper">
              
					{% include '::administartor/sidebar_administartor.html.twig' %}

				 </div>
               <!-- END SIDEBAR -->
               <!-- BEGIN CONTENT -->
               <div class="page-content-wrapper">
                  <div class="page-content">
                  
                     <!-- END STYLE CUSTOMIZER -->
                     <!-- BEGIN PAGE HEADER-->
                     <h3 class="page-title" style="margin-bottom: 41px;">
                       {{ patetitle }} 
                     </h3>
                     <div class="page-bar">
                        <ul class="page-breadcrumb">
                           <li>
                              <i class="fa fa-home"></i>
                               <a href="{{ path('move_plus_administrator_dashboard') }}">Dashboard</a>
                              <i class="fa fa-angle-right"></i>
                           </li>
                           <li>
                               <a href="{{ path('move_plus_administrator_cityPages') }}">{{ patetitle }}</a>
                             
                           </li>
                          
                        </ul>
                  
                     </div>
                     <!-- END PAGE HEADER-->
                     <!-- BEGIN PAGE CONTENT-->
                     <div class="row">
                        <div class="col-md-12">
                           <!-- BEGIN EXAMPLE TABLE PORTLET-->
                           <div class="portlet box blue">
                              <div class="portlet-title">
                                 <div class="caption">
                                    <i class="fa fa-edit"></i> {{ patetitle }} 
                                 </div>
                                 <div class="tools">
                                    <a href="javascript:;" class="collapse">
                                    </a>                                 
                                 </div>
                              </div>
                              <div class="portlet-body">
                                <div class="row customrow">
                                <div class="col-md-6 col-sm-12">
                                <div class="dataTableslength" id="sample_editable_1_length1">
                                <label> 
                                <select onChange="serchquery()" id="pagenumber" name="sample_editable_1_length" aria-controls="sample_editable_1" class="form-control input-xsmall input-inline">
                                <option value="20" {% if perpage == 20 %} selected {% endif %}>20</option>
                                <option value="50" {% if perpage == 50 %} selected {% endif %}>50</option>
                                <option value="100" {% if perpage == 100 %} selected {% endif %}>100</option>
                                <option value="200" {% if perpage == 200 %} selected {% endif %}>200</option>
                                <option value="500" {% if perpage == 500 %} selected {% endif %}>500</option>
                                
                                </select> records</label>
                                </div></div>
                                <div class="col-md-6 col-sm-12">
                                <div id="sample_editable_1_filter" class="dataTables_filter">
                                <label>Search:<input onBlur="serchquery()" id="searchkey" value="{{ serachkey }}" type="search" class="form-control input-small input-inline" placeholder="" aria-controls="sample_editable_1"></label>
                                </div>
                                </div>
                                </div>
                                
                                
                                 <table class="table table-striped table-hover table-bordered" id="sample_editable_11">
                                    <thead>
                                       <tr>
                                          <th>
                                             Id
                                          </th>
                                          <th>
                                             Service Title
                                          </th>
                                          <th>
                                             Page Title
                                          </th>
                                         <th>
                                             County
                                          </th>
                                         <th>
                                             City
                                          </th>
                                          <th>
                                             Action Perform
                                          </th>
                                         
                                       </tr>
                                    </thead>
                                    <tbody>
									 {% for service in countyPages  %}
										<tr>
										   <td> {{ loop.index }} </td> 
											<td>{{ service.service_name }}</td>
											<td>{{ service.title }}</td>
											<td>{{ service.county }}</td>					  
											<td>{{ service.city }}</td>					  
										  <td>
										   <a href="http://moveplus.co.uk/{{ service.service_slug }}/{{ service.county_slug }}/{{ service.city_slug }}" TARGET="_blank" class="View" title="View" > View </a> |
										   
										   <a href="{{ path( 'move_plus_administrator_editCityPages', { 'id': service.id  }) }}" class="edit" title="Edit"> Edit </a> |
																					
											<a onclick="deletecityPage('{{service.id}}')" title="Delete" class="delete" id="deleterow" > Delete </a>
										  </td>									 
									   </tr>
									   {% endfor %}		   
                                    </tbody>
                                 </table>
                                
                                 <input type="hidden" id="cpagenu" name="page" value="{{ pageno }}">
                                 <input type="hidden" id="perpage" name="perpage" value="{{ perpage }}">
								 <div class="dataTables_paginate paging_simple_numbers" id="sample_editable_1_paginate">
									<ul class="pagination">
	
										 {% if pageno > 0 %}
										 <li class="paginate_button previous"  id="sample_editable_1_previous">
											<a class="prev" href="javascript:void(0)" onCLick="prevpage('prev')">Prev</a>
										 </li>
										 {% endif %}
										 
										 {% if pageno < pagesbh %}
										 <li class="paginate_button next"  id="sample_editable_1_next">
											<a class="next" href="javascript:void(0)" onCLick="prevpage('next')">Next</a>
										</li>
										 {% endif %}
									</ul>
								</div>
								
                              </div>
                           </div>
                           <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                     </div>
                     <!-- END PAGE CONTENT -->
                  </div>
               </div>
               
            </div>
            <script>
            
            function serchquery(){
            $('#perpage').val($('#pagenumber').val());
            
            window.location = "http://moveplus.co.uk/administrator/city-pages?page="+$('#cpagenu').val()+"&perpage="+$('#perpage').val()+"&s="+$('#searchkey').val();
            
            }
                                
                                
                                
                                
            function prevpage(direction){
            if(direction == 'prev'){
            var page = parseInt($('#cpagenu').val())-1;
            }else{
            var page = parseInt($('#cpagenu').val())+1;
            }
            window.location = "http://moveplus.co.uk/administrator/city-pages?page="+page+"&perpage="+$('#perpage').val()+"&s="+$('#searchkey').val();
            }
            </script>
