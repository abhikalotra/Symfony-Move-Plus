                    <h1>Photos --county</h1>
                    <div class="photos_block">                    
                    	{% for allService in allServiceDetails  %}
							<div class="photo_box">
								<a href="{{ path('move_plus_service_webService', {'slug':allService.slug }) }}" title="{{ allService.title }}" >
									<img src="{{ asset('uploads/serviceImage') }}/{{ allService.featuredImage }}" title="{{ allService.title }}" class="photo" border="0" /></a><br />
								
								<a href="{{ asset('service') }}/{{ allService.slug }}" class="view">{{ allService.title }}</a>
							</div>                    	                 
                    	 {% endfor %}	            
                    </div>
                    <div class="countryList">
						
						{% if servicesId == 4  %}	
									 
											<div class="countryListShow" >							
											<h2 style=" margin: 12px 0px -10px 9px;"> 	Details	</h2> 
											<h3> 
											<ul class="list">
											<li> {{ title }}  </li>
											
											</ul></h3>
											</div>
										
						{% else  %}	
									{% for service in countyListByServiceParentId  %}												
											<h3><ul class="list" id="list-{{ service.id }}">
												<li>
																							
												 <!-- <a  href="{{ asset('app_dev.php') }}/{{ service.county }}/{{ service.title }}" title="{{ service.county }}"> {{ service.county }} </a>  -->
												
												<a href="{{ path('move_plus_service_county', {'county':service.county, 'slug':service.slug  }  ) }}" title="{{ service.title }}" >{{ service.county }} county</a> 
												</li>
											</ul></h3>
										{% endfor %}
						{% endif %}
						
						
							{% if next   %}
								{% for service in services  %}      
									<div class="nav">
										<a href="{{ path('move_plus_service_webService', {'slug':service.slug }) }}?p={{ next }}">{{ next }}</a>
									</div>
								{% endfor %}
							{% endif %}
							
                    </div>
                                
