						{% if service.featuredImage %}						
								<img src="{{ asset('uploads/serviceImage') }}/{{ service.featuredImage }}" alt="" title="" class="right_icon" />
						{% else  %}	
								<img src="{{ asset('theme/frontend/images') }}/81-300x198.jpg" alt="" title="" class="right_icon" />
							{% endif %}	
							
							
